<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/layout_bg_weather"> <!-- Replace with your card background drawable -->

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_location_pin" /> <!-- Replace with your location pin icon -->

    <TextView
        android:id="@+id/textViewCityName"
        android:layout_toEndOf="@id/imageViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/textViewTemperature"
        android:layout_below="@id/textViewCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16Â°C"
        android:textSize="34sp" />

    <!-- Additional TextViews for date/time and weather condition -->

    <ImageView
        android:id="@+id/imageViewFavorite"
        android:layout_alignParentEnd="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/favorite_icon" /> <!-- Replace with your favorite icon -->
</RelativeLayout>
